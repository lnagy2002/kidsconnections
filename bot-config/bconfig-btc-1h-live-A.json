{
  "mode": "live-paper",
  "reportsDir": "reports-btc-live-A",
  "backend": { "type": "ccxt" },
  "exchange": "kraken",
  "symbol": "BTC/USDT",
  "timeframe": "1h",
  "lookback": 1200,

  "startEquity": 20000,
  "riskPerTradePct": 0.6,
  "maxPositionNotionalUSD": 15000,
  "feesPctRoundtrip": 0.08,
  "slippageBps": 2,

  "rsiPeriod": 14,
  "emaFast": 50,
  "emaSlow": 200,
  "atrPeriod": 21,
  "atrStopMult": 2.4,

  "strategy": { "style": "trend" },

  "rsiLong": 50,
  "rsiLongSoft": 42,
  "useLtfEmaSlope": true,
  "entryAtrCushion": 0.10,

  "momentumExit": { "enabled": true, "requiresProfit": true, "minR": 0.60 },

  "trailingStop": {
    "enabled": true,
    "mode": "entryATR",
    "atrMult": 2.2,
    "percent": 4,
    "onCloseOnly": true
  },
  "trailStartR": 1.2,

  "htfFilter": {
    "enabled": true,
    "timeframe": "4h",
    "mode": "emaUpOrRsi",
    "rsiAbove": 50,
    "confirmLag": 0,
    "minBars": 250
  },

  "trendLtfConfirm": false,
  "minBarsBetweenTrades": 2,
  "cooldownBarsAfterLoss": 2,

  "reentryATR": 0.30,
  "reentryATRStop": 0.60,
  "reentryATRProfit": 0.30,

  "maxTradesPerDay": 6,
  "maxConsecutiveLosses": 4,
  "minHoldBars": 2,
  "dailyLossLimitPct": 1.0,
  "lossStreakDecayPerDay": 1,

  "csv": { "enable": true, "trades": "trades.csv", "equity": "equity.csv" },
  "statePersistence": { "enable": true, "file": "livestate.json" },
  "enterExecLog": { "enable": true, "file": "enter-exec.csv" },
  "debugSignals": true,
  "debugToFile": true,
  "pollSeconds": 60,

  "htfStrongRsi": 55,
  "rsiLongSoftWhenHtfStrong": 40
}
